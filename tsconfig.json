{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "apps/api/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["libs/common/src/*"],
      "@auth/*": ["apps/api/src/auth/*"],
      "@users/*": ["libs/users/*"],
      "@lanes/*": ["libs/lanes/*"],
      "@calendar/*": ["libs/calendar/*"],
      "@notes/*": ["libs/notes/*"]
    }
  },
  "include": ["apps/api/src", "apps/api/prisma", "libs/common/src", "libs/users", "libs/lanes", "libs/calendar", "libs/notes"],
  "exclude": ["tests", "**/*.test.ts", "**/*.spec.ts"]
}
