{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "apps/api/src",
    "outDir": "apps/api/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { "@common/*": ["libs/common/src/*"] }
  },
  "include": ["apps/api/src", "apps/api/prisma", "tests"]
}
