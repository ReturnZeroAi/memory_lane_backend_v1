  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only -r tsconfig-paths/register apps/api/src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "NODE_ENV=production node apps/api/dist/index.js",
    "prisma:generate": "bash apps/api/scripts/db-url.sh ${NODE_ENV:-development} && prisma generate --schema apps/api/prisma/schema.prisma",
    "prisma:migrate:dev": "bash apps/api/scripts/db-url.sh development && prisma migrate dev --schema apps/api/prisma/schema.prisma",
    "prisma:migrate:deploy": "bash apps/api/scripts/db-url.sh production && prisma migrate deploy --schema apps/api/prisma/schema.prisma",
    "test": "jest"
  },
